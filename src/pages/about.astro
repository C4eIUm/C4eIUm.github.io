---
import { Icon } from "astro-icon/components";
import MainCard from "@/components/MainCard.astro";
import GitHubStats from "@/components/mdx/GitHubStats.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout title="About">
  <MainCard
    title="About enter"
    description="Developer, open-source enthusiast, and creator of the Frosti blog theme."
    textOverlay="ABOUT"
    infoIcon="lucide:user"
  >
  
    <div class="space-y-10 mb-8">
      <!-- Profile Section -->
      <section class="flex flex-col md:flex-row gap-8 items-center md:items-start">
        <div class="avatar">
          <div
            class="w-32 h-32 md:w-40 md:h-40 rounded-xl ring ring-primary ring-offset-base-100 ring-offset-2 overflow-hidden"
          >
            <img src="https://github.com/EveSunMaple.png" alt="SunMaple" width="160" height="160" loading="eager" />
          </div>
        </div>

        <div class="flex-1 text-center md:text-left">
          <h1 class="text-3xl md:text-4xl font-bold mb-2">SunMaple</h1>
          <p class="text-xl text-base-content/80 mb-4">Developer & Open-Source Enthusiast</p>

          <div class="flex flex-wrap gap-3 justify-center md:justify-start mb-6">
            <a
              href="https://github.com/EveSunMaple"
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-sm btn-outline gap-2"
            >
              <Icon name="lucide:github" class="w-4 h-4" />
              <span>GitHub</span>
            </a>
            <a
              href="https://twitter.com/EveSunMaple"
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-sm btn-outline gap-2"
            >
              <Icon name="lucide:twitter" class="w-4 h-4" />
              <span>Twitter</span>
            </a>
            <a href="mailto:evesunmaple@outlook.com" class="btn btn-sm btn-outline gap-2">
              <Icon name="lucide:mail" class="w-4 h-4" />
              <span>Email</span>
            </a>
          </div>

          <p class="text-base-content/80">
            Hello! I'm SunMaple, a passionate developer focused on creating elegant, responsive, and efficient web
            applications. I'm the creator of the Frosti blog theme, a modern Astro-based theme for content creators. I
            love contributing to open-source projects and building tools that help others create beautiful digital
            experiences.
          </p>
        </div>
      </section>

    </div>
  </MainCard>
</BaseLayout>
